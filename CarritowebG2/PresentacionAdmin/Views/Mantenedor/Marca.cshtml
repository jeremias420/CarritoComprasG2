
@{
    ViewBag.Title = "Marca";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="index.html">Mantenimiento</a></li>
    <li class="breadcrumb-item active">Marca</li>
</ol>

<div class="card">
    <div class=" = card-header">
        <i class="fas fa-users-cog me-1"></i>Lista de Marcas
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-success" onclick="abrirModal(null)">Crear Nuevo</button>
            </div>
        </div>

        <hr />

        <table id="tabla_cate" class="display cell-border" style="width: 100%">
            <thead>
                <tr>
                    <th>Descripcion</th>
                    <th>Activo</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            <tbody>
        </table>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="FormModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="exampleModalLabel">Marca</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body ">

                <input id="txtId" type="text" value="0" />

                <div class="row g-1">

                    <div class="col-sm-6">
                        <label for="txtdescripcion" class="form-label">Descripcion</label>
                        <input type="text" class="form-control" id="txtdescripcion">
                    </div>

                    <div class="col-sm-6">
                        <label for="cboactivo" class="form-label">Activo</label>
                        <select id="cboactivo" class="form-select">
                            <option value="1">Si</option>
                            <option value="0">No</option>
                        </select>
                    </div>
                    <div class="row mt-3">

                        <div>
                            <div id="MensajeError" class="alert alert-danger" role="alert"></div>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                        <button type="button" class="btn btn-primary" onclick="Guardar()">Guardar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script>

        var filaSeleccionada;
        var tabladata;
         //creacion de la tabla
        tabladata = $("#tabla_cate").DataTable({
            responsive: true,
            ordering: false,
            "Ajax": {
                url: '@Url.Action("ListarMarca", "Mantenedor")',
                type: "GET",
                datatype: "json",
            },
            "columns": [
                { "data": "marc_Descripcion" },
                {
                    "data": "marc_Activo", "render": function (valor) {
                        if (valor) {

                            return '<span class="badge bg-success">Si</span>'

                        } else {

                            return '<span class="badge bg-danger">No</span>'

                        }
                    }
                },
                {
                    //Botones de la tabla
                    "defaultContent": '<button type="button" class="btn btn-primary btn-sm btn-editar"><i class="fas fa-pen"></i></button>' +
                      '<button type="button" class="btn btn-danger btn-sm ms-1 btn-Eliminar"><i class="fas fa-trash"></i></button>',
                    "orderable": false,
                    "searchable": false,
                    "width": "60px"
                }
            ],
            "language": {
                "url": "//cdn.datatables.net/plug-ins/2.1.3/i18n/es-MX.json"
            }
        });
        // json = var
        function abrirModal(json) {

            $("#MensajeError").hide();

            $("#txtId").val(0);
            $("#txtdescripcion").val("");
            $("#cboactivo").val(1);

            if (json != null) {

                $("#txtId").val(json.marc_ID);
                $("#txtdescripcion").val(json.marc_Descripcion);
                $("#cboactivo").val(json.marc_Activo == true ? 1 : 0 );

            }

            $("#FormModal").modal("show");

        }
         //Si se preciona el boton editar dentro de la tabla, pasa:
        $("#tabla tbody").on("click", '.btn-editar', function () {

            var filaSeleccionada = $(this).closest("tr");

            //BORRAR (mostrar datos en la consola)
            console.log(tabladata.row(filaSeleccionada).data());

            var data = tabladata.row(filaSeleccionada).data();

            //Abre el abrir modal pasando la informacion de las tablas
            abrirModal(data)

        });
        $("#tabla tbody").on("click", '.btn-Eliminar', function () {

            var MarcaSeleccionada = $(this).closest("tr");

            var data = tabladata.row(MarcaSeleccionada).data();

            swal({
                title: "¿Estas seguro?",
                text: "No podras recuperar esta Marca!",
                type: "warning",
                showCancelButton: true,
                confirmButtonClass: "btn-primary",
                confirmButtonText: "Eliminar!",
                cancelButtonText:"No",
                closeOnConfirm: true
            },
                function () {

                    jQuery.ajax({

                        url: '@Url.Action("EliminarMarca", "Mantenedor")',
                        type: "POST",
                        data: JSON.stringify({ marc_ID: data.marc_ID }),
                        datatype: "json",
                        contentType: "application/json; charset=utf-8",
                        success: function (data) {

                            if (data.Resultado) {

                                tabladata.row(MarcaSeleccionada).remove().draw();

                            } else {

                                swal("no se puede eliminar", data.Mensaje, "Error");

                            }
                        },
                        error: function (error) {
                            console.log(error);
                        },
                    });
                });
        });
        function Guardar() {

            var Marca = {

                marc_ID: $("#txtid").val(),
                marc_Descripcion: $("#txtdescripcion").val(),
                marc_Activo: $("#txtactivo").val() == 1 ? true : false
            }

            jQuery.ajax({

                url: '@Url.Action("GuardarMarca", "Mantenedor")',
                type: "POST",
                data: JSON.stringify({ Objeto: Marca }),
                datatype: "json",
                contentType: "application/json; charset-utf-8",
                success: function (data) {
                    //NUEVO USUARIO

                    debugger;

                    if (Marca.marc_ID == 0) {

                        if (data.Resultado != 0) {

                            Marca.marc_ID = data.Resultado;
                            tabladata.row.add(Marca).draw(false);
                            $("#FormModal").modal("hide");
                        } else {
                            alert(data.mensaje)
                        }
                    } else {

                        alert(data.mensaje);
                        $("#MensajeError").text(data.Mensaje);
                        $("#MensajeError").show();
                        tabladata.row(filaSeleccionada).data(Marca).draw(false)
                    }
                },

                error: function () {
                    console.log(error)
                },
                beforeSend: function () {

                }



            });


            if (Marca.marc_ID == 0) {

                tabladata.row.add(Marca).draw(false);

            } else {

                tabladata.row(filaSeleccionada).data(Marca).draw(false);
            }

            $("#FormModal").modal("hide");
        }

    </script>
}




